# Firebase Configuration (Production)
# Firebase Console の「プロジェクトの設定」から取得してください
VITE_FIREBASE_API_KEY=your-api-key-here
VITE_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
VITE_FIREBASE_APP_ID=your-app-id
VITE_FIREBASE_MEASUREMENT_ID=your-measurement-id

# Environment
# 単一環境運用では常に production を使用
VITE_APP_ENV=production

# Basic Authentication (optional, disabled by default)
VITE_BASIC_AUTH_ENABLED=false
VITE_BASIC_AUTH_USERNAME=
VITE_BASIC_AUTH_PASSWORD=
VITE_BASIC_AUTH_REALM=Iwailist Preview
VITE_BASIC_AUTH_FORCE=false
# VITE_BASIC_AUTH_ALLOWED_ENVS=development,staging

# Google AdSense Configuration (Optional)
# AdSenseのクライアントID（例: ca-pub-1234567890123456）
VITE_ADSENSE_CLIENT_ID=
# 広告スロットID（各広告ユニットごとに異なる）
VITE_ADSENSE_SLOT=
