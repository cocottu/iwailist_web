# Development Environment
# Firebase Console から取得した開発環境の設定値を入力してください

# Firebase Configuration (単一プロジェクト運用では本番と同じ値を使用)
VITE_FIREBASE_API_KEY=your_shared_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=cocottu-iwailist.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=cocottu-iwailist
VITE_FIREBASE_STORAGE_BUCKET=cocottu-iwailist.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_shared_sender_id
VITE_FIREBASE_APP_ID=your_shared_app_id

# Environment
VITE_APP_ENV=development

# Basic Authentication (Optional, recommended when sharing preview URLs)
VITE_BASIC_AUTH_ENABLED=true
VITE_BASIC_AUTH_USERNAME=dev_user
VITE_BASIC_AUTH_PASSWORD=change_me
VITE_BASIC_AUTH_REALM=Iwailist Dev
# Set to true only when you want to test the Basic Auth flow locally
VITE_BASIC_AUTH_FORCE=false
# VITE_BASIC_AUTH_ALLOWED_ENVS=development,staging
